@{
    var shops = ViewBag.Shops as IEnumerable<ShopAppWEB.Models.ShopModel>;
}
@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    <div class="row" id="buttonsContainer">
        <div class="col-4">
            <button type="button" class="btn btn-primary btn-sm" data-whatever="appConsultant">Appoint a consultant</button>
        </div>
        <div class="col-4">
            <button type="button" class="btn btn-primary btn-sm" data-whatever="addConsultant">Add consultant</button>
        </div>
        <div class="col-4">
            <button type="button" class="btn btn-primary btn-sm" data-whatever="addShop">Add shop</button>
        </div>
    </div>
    <div class="row">
        <div class="card bg-light border border-primary text-black-50 col-12">
            <div class="card-body">
                <div class="card-header">
                    <h3>List of shops</h3>
                </div>
                <div class="form-group">
                    <table class="table table-striped table-borderless table-responsive-lg" style="width:100%" id="coffees">
                        <thead>
                            <tr>
                                <th>Name of shop</th>
                                <th>Address</th>
                                <th>Sales Сonsultant</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var shop in shops)
                            {
                                <tr>
                                    <td>@shop.Name</td>
                                    <td>@shop.Address</td>
                                    <td>
                                        @foreach (var salesConsultants in shop.SalesConsultants)
                                        {
                                            <p>@salesConsultants.Name&nbsp;@salesConsultants.LastName</p>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">

                @*<p>@Html.ValidationMessageFor(model => model.CoffeeId, "", new { @class = "text-danger" })</p>
                    <p>@Html.ValidationMessageFor(model => model.VolumeId, "", new { @class = "text-danger" })</p>*@
            </div>
        </div>
    </div>
</div>

@Html.Partial("Modal")